.ldgradient
  width: 140px
  height: 168px
  display: inline-block
  svg
    width: 100%
    height: 100%
  margin: 10px
  circle
    cursor: pointer
  .ldg-bar
    stroke-dasharray: 0 62.8308 0 62.8308
    transition: stroke-dasharray 0.5s  cubic-bezier(.1,.1,0,1)
  .ldg-bar.active
    stroke-dasharray: 0 0 125.6616 0
  .ldg-colors g
    transition: transform 0.3s cubic-bezier(.1,.1,0,1)
    transform-origin: 50px 50px
  .ldg-colors circle
    stroke-width: 0
  .ldg-board use, .ldg-texts
    opacity: 0
    transition: opacity 0.3s cubic-bezier(.1,.1,0,1)
  text
    text-transform: uppercase
    text-anchor: middle
    font-family: sans-serif
    font-size: 12px
    fill: #fff
    fill-opacity: 0.8
    user-select: none
  .ldg-btn
    font-size: 1.0em
    cursor: pointer
.ldgradient.active
  .ldg-board use, .ldg-texts
    opacity: 1
  .ldg-colors circle
    stroke-width: 1
.ldgradient.active.on .ldg-colors g
  transition: none
.ldgradient.dark text
  fill: #000
